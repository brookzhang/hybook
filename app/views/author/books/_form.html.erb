<%=form_for [:author,@book] do |f| %>
  <tr><td align="right">category_id</td><td align="left"><%= f.select(:category_id, @catetories) %></td></tr>
  <tr><td align="right">title</td><td align="left"><%=f.text_field :title %></td></tr>
  <tr><td align="right">description</td><td align="left"><%=f.text_area :description ,:size=>"80x10"%></td></tr>
  <tr><td align="right">keywords</td><td align="left"><%=f.text_field :keywords %></td></tr>
  <tr><td align="center" colspan="2"><%=f.submit "submit"%></td></tr>
  <%end%>
