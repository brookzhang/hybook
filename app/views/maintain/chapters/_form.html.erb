<%=form_for [:maintain,@book,@section,@chapter]  do |f| %>
  <tr><td align="right">标题</td><td align="left"><%=f.text_field :title %></td></tr>
  <tr><td align="right">内容</td><td align="left"><%=f.text_area :content , :size => "60x20" %></td></tr>
  <tr><td align="right">公开</td><td align="left"><%=f.check_box :public %></td></tr>
  <tr><td align="right">排序</td><td align="left"><%=f.text_field :sequence %></td></tr>
  <tr><td align="center" colspan="2"><%=f.submit "submit"%></td></tr>
  <%end%>
