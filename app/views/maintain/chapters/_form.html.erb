<%=form_for [:maintain,@book,@section,@chapter]  do |f| %>
  <tr><td align="right">title</td><td align="left"><%=f.text_field :title %></td></tr>
  <tr><td align="right">content</td><td align="left"><%=f.text_area :content , :size => "60x20" %></td></tr>
  <tr><td align="right">public</td><td align="left"><%=f.check_box :public %></td></tr>
  <tr><td align="right">sequence</td><td align="left"><%=f.text_field :sequence %></td></tr>
  <tr><td align="center" colspan="2"><%=f.submit "submit"%></td></tr>
  <%end%>
